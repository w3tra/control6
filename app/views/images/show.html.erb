<div class="container">
	<%= image_tag @image.picture, class: "img-responsive" %>
	<%= button_to 'delete image', image_path(@image), method: 'delete' if @image.user == current_user %>
	Author: <%= link_to @image.user.name, user_path(@image.user) %><br>
	Rating: <%= @image.rating %>
	<div id="inner">
		<h3>new comment</h3>
		<%= render 'image_comments/form' %>
		<div class="container">
			<div class="row">
				<div class="col-md-8">
					<div class="page-header">
						<h1><small class="pull-right"><%= @image.image_comments.count %></small> Comments </h1>
					</div> 
					<div class="comments-list">
						<%= render @image.image_comments.reverse %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
